{
  "Api": {
    "BaseUri": "https://api.local.myInfo.world/api/resources"
  },
  "Mongo": {
    "ConnectionString": "mongodb://storage:storagepass@mongo.local.myInfo.world:27017",
    "DatabaseName": "myInfoStore"
  },
  "Service": { "BasePath": "/store" },
  "Authentication": {
    "Scheme": "Cookies",
    "ChallengeScheme": "oidc",
    "Authority": "https://local.myInfo.world/identity",
    "RequireHttpsMetadata": "true",
    "RequiredScopes": "openid, profile, email, myInfo.Api",
    "SaveTokens": "true",
    "ResponseType": "code",
    "ClientSecret": "secret",
    "ClientId": "myInfo.Mvc",
    "GetClaimsFromUserInfoEndpoint": "true"
  },
  "RequestResponse": {
    "Source": "myInfo.Store"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
