{
  "Mongo": {
    "ConnectionString": "mongodb://storage:storagepass@mongo.mystore.local:27017",
    "DatabaseName": "myStoreIdentity"
  },
  "Google": {
    "SignInScheme": "idsrv.external",
    "ClientId": "<your google client id>",
    "ClientSecret": "<your google client secret>"
  },
  "Service": { "BasePath": "/identity" },
  "Authentication": {
    "Scheme": "Cookies",
    "ChallengeScheme": "oidc",
    "Authority": "https://mystore.local/identity",
    "RequireHttpsMetadata": "true",
    "RequiredScopes": "openid, profile, email, myStore.Api",
    "SaveTokens": "true",
    "ResponseType": "code",
    "ClientSecret": "secret",
    "ClientId": "myStore.Mvc",
    "GetClaimsFromUserInfoEndpoint": "true"
  },
  "RequestResponse": {
    "Source": "myStore.Identity"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
