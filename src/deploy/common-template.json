{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
        "adminUser": {
            "defaultValue": "", "type": "string"
        },
		"productName": {
			"defaultValue": "myinfoworld",
			"type": "string"
		},
		"product": {
			"defaultValue": "miw",
			"type": "string"
		},
		"environment": {
			"defaultValue": "[ split( resourceGroup().location , '-') [0]]",
			"type": "string"
		},
        "tenantid": {
            "defaultValue": "", "type": "string"
        }
	},
	"variables": {
		"configurationName": "[concat( parameters('product'),'-' , parameters('environment'), '-',   'ac')]",
		"storageAccountName": "[concat(parameters('product'),  parameters('environment'),  'sa')]",
		"containerRegistryName": "[concat( parameters('product'),parameters('environment'),   'cr')]",
		"keyVaultName": "[concat( parameters('product'), parameters('environment'),  '-kv')]"
	},
	"resources": [
		{
			"name": "[variables('storageAccountName')]",
			"type": "Microsoft.Storage/storageAccounts",
			"apiVersion": "2015-06-15",
			"location": "[resourceGroup().location]",
			"tags": {
				"displayName": "[variables('storageAccountName')]"
			},
			"properties": {
				"accountType": "Standard_LRS"
			}
		},
		{
			"type": "Microsoft.KeyVault/vaults",
			"apiVersion": "2019-09-01",
			"name": "[variables('keyVaultName')]",
			"location": "ukwest",
			"properties": {
				"sku": {
					"family": "A",
					"name": "Standard"
				},
				"tenantId": "[parameters('tenantid')]",
				"accessPolicies": [
					{
						"tenantId": "[parameters('tenantid')]",
						"objectId": "[parameters('adminUser')]",
						"permissions": {
							"keys": [
								"Get",
								"List",
								"Update",
								"Create",
								"Import",
								"Delete",
								"Recover",
								"Backup",
								"Restore"
								
							],
							"secrets": [
								"Get",
								"List",
								"Set",
								"Delete",
								"Recover",
								"Backup",
								"Restore"
							],
							"certificates": [
								"Get",
								"List",
								"Update",
								"Create",
								"Import",
								"Delete",
								"Recover",
								"Backup",
								"Restore",
								"ManageContacts",
								"ManageIssuers",
								"GetIssuers",
								"ListIssuers",
								"SetIssuers",
								"DeleteIssuers"
							]
						}
					}
				],
				"enabledForDeployment": false,
				"enabledForDiskEncryption": false,
				"enabledForTemplateDeployment": true,
				"enableSoftDelete": true,
				"softDeleteRetentionInDays": 90,
				"enableRbacAuthorization": false,
				"vaultUri": "[concat('https://', variables('keyVaultName'), '.vault.azure.net/')]",
				"provisioningState": "Succeeded",
				"publicNetworkAccess": "Enabled"
			}
		},
		{
			"name": "[variables('containerRegistryName')]",
			"type": "Microsoft.ContainerRegistry/registries",
			"apiVersion": "2017-10-01",
			"location": "[resourceGroup().location]",
			"sku": {
				"name": "Standard"
			},
			"properties": {
				"adminUserEnabled": true
			}
		}
	],
	"outputs": {}
}